
@{
    ViewBag.Title = "Authorize";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@model dynamic
@using (Html.BeginForm("SetAuth", "Staff", FormMethod.Post))
{
    <div class="row upp2">
        <!-- Column -->
        <div class="row rolebtns2">
            <div class="col-lg-6 col-xlg-6 col-md-6">
               
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Type the product type.." aria-label="">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="mdi  mdi-magnify"></i></span>
                        </div>
                    </div>
            </div>
            <div class="col-lg-6 col-xlg-6 col-md-6">
                <button type="submit" class="btn btn-info btnad drole"  data-toggle="modal" data-target="#addcat" data-whatever="">Save</button>
            </div>
        </div>
        <div class="addrolestab">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Module Name</th>
                        <th>Access Right</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dt in (IEnumerable<gym_mgmt_01.Models.ModuleDetails>)ViewData["auth"])
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(mode => dt.Module)
                            </td>
                            <td>
                                @Html.CheckBox("Status", dt.status == "on" ? true : false, new { @type = "checkbox", @class = "js-switch" })
                            </td>
                        </tr>

                    }
                    
                </tbody>
            </table>
        </div>
        <!-- Column -->

    </div>
}
@section scripts {
    <script type="text/javascript">
        
    </script>
}

