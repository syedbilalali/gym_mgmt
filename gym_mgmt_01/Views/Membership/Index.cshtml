                                                <div class="valid-feedback">This looks good !!! </div>
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="col-md-12 mb-3">
                                                <label for="" class="mb30">Allowed Members</label>
                                                @Html.EditorFor(model => model.Capacity, new { htmlAttributes = new { @class = "form-control mb70", @type = "number", @placeholder = " Enter Allowed Members. " } })
                                                @Html.ValidationMessageFor(modal => modal.Capacity, "", new { @class = "text-danger" })
                                                <div class="invalid-feedback">Please Enter Maximum Allowed Member !!!</div>
                                                <div class="valid-feedback">This looks good !!! </div>
                                            </div>
                                        </div>
                                        <button type="submit" onclick="getDate()" class="btn btn-info subbtn">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
