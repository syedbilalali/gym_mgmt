<!-------Modal For Updat Product Type ---------------->
<div class="modal" id="updateProd" tabindex="-1" role="dialog" aria-labelledby="addcatlabel">
    @using (Html.BeginForm("EditStock", "Stock", FormMethod.Post, new { @class = "needs-validation" }))
    {
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="addcatlabel">Edit Stock</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" id="stockID" name="stockID" value="" />
                        <label for="" class="control-label label1">Product Name :</label>
                        <select class="form-control label2" name="productName" id="productName">
                            @if (Model.products.Count > 0)
                            {
                                <option value="0" selected>--SELECT PRODUCT--</option>
                                foreach (var products in Model.products)
                                {
                                    <option value="@products.Id">@products.Name</option>
                                }
                            }
                            else
                            {
                                <option value="0">None</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label label1"> Buy Price :</label>
                        <input type="text" maxlength="20" name="getprice" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" class="form-control label2" id="buyPrice" />
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label label1"> Sell Price :</label>
                        <input type="text" maxlength="20" name="sellprice" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" class="form-control  label2" id="sellPrice" />
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label label1"> Quantity :</label>
                        <input type="text" maxlength="20" name="quantity" oninput="this.value = this.value.replace(/[^0-9]/g, '').replace(/(\..*)\./g, '$1');" class="form-control label2" id="quantity" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default btn-info">Submit</button>
                    <button type="button" class="btn btn-default btn-info" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    }
</div>