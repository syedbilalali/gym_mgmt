                                                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control mb70", @type = "date" } })
                                                @Html.ValidationMessageFor(modal => modal.StartDate, "", new { @class = "text-danger" })
                                                <div class="invalid-feedback">Choose start date for subscriptions !!!</div>
                                                <div class="valid-feedback">This looks good !!! </div>
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="col-md-12 mb-3">
                                                <label for="" class="mb30">End Date</label>
                                                @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control mb70", @type = "date" } })
                                                @Html.ValidationMessageFor(modal => modal.EndDate, "", new { @class = "text-danger" })
                                                <div class="invalid-feedback">Choose end date for subscriptions !!!</div>
                                                <div class="valid-feedback">This looks good !!! </div>
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="col-md-12 mb-3">
                                                <label for="" class="mb30">Pre Expiration Days</label>
                                                @Html.EditorFor(model => model.PreExpirationDays, new { htmlAttributes = new { @class = "form-control mb70", @type = "number", @placeholder = " Enter Pre Expiration Days. " } })
                                                @Html.ValidationMessageFor(modal => modal.PreExpirationDays, "", new { @class = "text-danger" })
