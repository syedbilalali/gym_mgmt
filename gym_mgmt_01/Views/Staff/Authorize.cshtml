
@{
    ViewBag.Title = "Authorize";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model dynamic
@using (Html.BeginForm("SetAuth", "Staff", FormMethod.Post))
{
    <div class="row upp2">
        <!-- Column -->
        <div class="row rolebtns2">
            <div class="col-lg-6 col-xlg-6 col-md-6">
               
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Type the product type.." aria-label="">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="mdi  mdi-magnify"></i></span>
                        </div>
                    </div>
            </div>
            <div class="col-lg-6 col-xlg-6 col-md-6">
                <button type="submit"    class="btn btn-info btnaddrole"  data-toggle="modal" data-target="#addcat" data-whatever="">Save</button>
            </div>
        </div>
        <div class="addrolestab">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Module Name</th>
                        <th>Access Right</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.module.Count > 0)
                    {
                        foreach (var st in Model.module)
                        {
                            <tr>
                                <td>

                                    @st.Module
                                </td>
                                <td>

                                    @*<input id="memberType" name="memberType" type="checkbox" checked class="js-switch" data-color="#f62d51" data-size="small" />*@
                                    @Html.CheckBox("Status", st.status == "on" ? true : false, new { @type = "checkbox", @class = "js-switch" })

                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <!-- Column -->

    </div>
}

    @section scripts {
        <script type="text/javascript">

        </script>
    }

