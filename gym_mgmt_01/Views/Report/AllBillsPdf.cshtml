@{
    ViewBag.Title = "Physiofit | All Bills";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="assets/images/favicon.png">
    <title> </title>
    <!-- This page CSS -->
    <!-- chartist CSS -->
    <link href="@Url.Content("~/assets/node_modules/morrisjs/morris.css")" rel="stylesheet">

    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet">

    <link href="@Url.Content("~/dist/css/style.min.css")" rel="stylesheet">
    <!-- Dashboard 1 Page CSS -->
    <link href="@Url.Content("~/dist/css/pages/dashboard1.css")" rel="stylesheet">
</head>

<body class="invoicebody">
    <div class="invoice">
        <h2>PHYSIOFIT CLUB</h2>
        <h3>Bills Reports</h3>
        <div class="invoicetable">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Invoice No.</th>
                        <th>Member Name</th>
                        <th>Sub Total</th>
                        <th>Sales Tax</th>
                        <th>Total Amount</th>
                        <th>Total Pay</th>
                        <th>Remain Price</th>
                        <th>Paid Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.sellsReport.Count > 0)
                    {
                        foreach (var sells in Model.sellsReport)
                        {
                            <tr>
                                <td>#@sells.Invoice_number</td>
                                <td>@sells.Member_Name</td>
                                <td>$@sells.Subtotal</td>
                                <td>$@sells.Sales_Tax</td>
                                <td>$@sells.Total_Amount</td>
                                <td>$@sells.Total_Pay</td>
                                <td>$@sells.Remain_price</td>
                                <td>PAID</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" align="center">
                                <div class="alert alert-info">
                                    <i class="ti-info" style="margin-right: 5px;border-radius: 50%;border: 1px solid #249ddc; padding: 3px; font-size: 10px;"></i> No Bill Report Found !!!
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">  </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- ============================================================== -->
    <script src="@Url.Content("~/assets/node_modules/jquery/jquery-3.2.1.min.js")"></script>
    <!-- Bootstrap popper Core JavaScript -->
    <script src="@Url.Content("~/assets/node_modules/popper/popper.min.js")"></script>
    <script src="@Url.Content("~/assets/node_modules/bootstrap/dist/js/bootstrap.min.js")"></script>

    <!--Wave Effects -->
    <script src="@Url.Content("~/dist/js/waves.js")"></script>
    <!--Menu sidebar -->
    <script src="@Url.Content("~/dist/js/sidebarmenu.js")"></script>
    <!--Custom JavaScript -->
    <script src="@Url.Content("~/dist/js/custom.min.js")"></script>
    <!-- ============================================================== -->
    <!-- This page plugins -->
    <!-- ============================================================== -->
    <!--morris JavaScript -->
    <script src="@Url.Content("~/assets/node_modules/raphael/raphael-min.js")"></script>
    <script src="@Url.Content("~/assets/node_modules/morrisjs/morris.min.js")"></script>
    <script src="@Url.Content("~/assets/node_modules/jquery-sparkline/jquery.sparkline.min.js")"></script>
    <script>
    </script>
</body>
</html>
