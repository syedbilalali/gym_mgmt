@model gym_mgmt_01.Models.Membership
    <div class="modal" id="editMembership" tabindex="-1" role="dialog" aria-labelledby="addclasslabel">
        @using (Html.BeginForm("editMembership", "Membership", FormMethod.Post, new { @id = "editMembership1", @class = "needs-validation", @novalidate = "" }))
        {
            @Html.AntiForgeryToken()

            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="addclasslabel">Edit Membership </h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <form id="addClass" method="post">
                            @Html.HiddenFor(model => model.Id , new { @Id="memID" } )
                            <div class="form-group">
                                <label for="" class="control-label label1">Name</label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @type = "text", @name = "Name", @required = "", @class = "form-control label2", @id = "membrshpname" } })
                               
                            </div>
                            <div class="form-group">
                                <label for="" class="control-label label1">Description</label>
                                
                                @Html.TextAreaFor(model => model.Description ,new { @type="date", @name="Description", @class="form-control label2", @id="description" })
                            </div>
                            <div class="form-group">
                                <label for="" class="control-label label1">Amount</label>
                                @Html.EditorFor(model => model.Amount , new { htmlAttributes = new { @type="number" ,@name="amount", @required="", @class="form-control label2" , @id="memAmount"} })
                                
                            </div>
                            <div class="form-group">
                                <label for="" class="control-label label1">Start Date</label>
                                @Html.EditorFor(model => model.StartDate , new { htmlAttributes = new { @type="date" , @name="StartDate" , @class="form-control label2 date-inputmask" , @placeholder="Enter Start Date" ,  @id="StartDate" } })
                               
                            </div>
                            <div class="form-group">
                                <label for="" class="control-label label1">End Date</label>
                                @Html.EditorFor(model=> model.EndDate , new { htmlAttributes = new { @type="date" , @name="EndDate" , @class="form-control label2 date-inputmask" , @placeholder="Enter End Date" , @id="EndDate" } })
                                
                            </div>
                            <div class="form-group">
                                <label for="" class="control-label label1">Pre Expiration Days :</label>
                                @Html.EditorFor(model => model.PreExpirationDays , new { htmlAttributes = new { @type="number" , @name="PreExpirationDays" ,  @class="form-control label2" ,  @id="preexpdays"  } })
                                
                            </div>
                            <div class="form-group">
                                <label for="" class="control-label label1"> Allowed Members :</label>
                                @Html.EditorFor(model => model.Capacity , new { htmlAttributes = new { @type="number", @name="Capacity" , @required="" , @class="form-control label2" ,  @id="capacity" } })
                            </div>
                        </form>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default btn-info">Edit Membership</button>
                        <button type="button" class="btn btn-default btn-info" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>

        }
    </div>
 @section scripts{
    
 }
